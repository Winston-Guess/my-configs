{
	//"rulesDirectory": ["./scripts"],//${workspaceRoot}/scripts
	"defaultSeverity": "warning",
	"extends": [
		"tslint:recommended"
	],
	"jsRules": {},
	"rules": {
		"no-namespace": false,
		"class-name": true,
		"comment-format": [
			true,
			"check-space"
		],
		"indent": [
			true,
			"tabs"
		],
		"jsdoc-format": true,
		"no-var-keyword": true,
		"no-duplicate-variable": true,
		"semicolon": [
			true,
			"always"
		],
		"no-internal-module": true,
		"typedef": [
			true,
			"property-declaration"
		],
		"no-trailing-whitespace": false,
		"whitespace": [
			true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-separator",
			"check-type"
		]
	}
}